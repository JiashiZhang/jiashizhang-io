---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
    title="E-commerce Platform"
    img="/post_img.webp"
    desc="A full-featured e-commerce platform built with React, Node.js, and MongoDB. Includes user authentication, product management, and payment integration."
    url="#"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Portfolio Website"
    img="/post_img.webp"
    desc="A personal portfolio website built with Astro and TailwindCSS. Features a blog, project showcase, and CV."
    url="#"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Open Source Contributions</div>
  </div>

  <HorizontalCard
    title="Open Source Tool"
    img="/post_img.webp"
    desc="Contributed to a popular open-source tool for developer productivity. Fixed bugs and added new features."
    url="#"
    badge="FOSS"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Library X"
    img="/post_img.webp"
    desc="Created a utility library for JavaScript developers. Published on npm and used by thousands of developers."
    url="#"
  />
</BaseLayout>
