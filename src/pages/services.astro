---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Services" sideBarActiveItemID="services">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Services</div>
  </div>

  <HorizontalCard
    title="Web Development"
    img="/post_img.webp"
    desc="I build responsive and performant websites using modern technologies like React, Astro, and TailwindCSS."
    badge="NEW"
    url="#"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Mobile App Development"
    img="/post_img.webp"
    desc="I develop cross-platform mobile applications using React Native and Flutter."
    url="#"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Consulting"
    img="/post_img.webp"
    desc="I provide technical consulting for startups and businesses looking to improve their software architecture and development processes."
    url="#"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Mentoring"
    img="/post_img.webp"
    desc="I offer mentoring sessions for aspiring software engineers and developers looking to level up their skills."
    url="#"
  />
</BaseLayout>
